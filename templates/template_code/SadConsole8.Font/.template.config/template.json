{
    "$schema": "http://json.schemastore.org/template",
    "author": "Thraka",
    "classifications": [
        "SadConsole"
    ],
    "identity": "SadConsole.v8.Font",
    "name": "SadConsole v8 Font Definition",
    "sourceName": "MyConsole",
    "shortName": "sadconsole8font",
    "preferNameDirectory": false,
    "tags": {
        "language": "C#",
        "type": "item"
    },
    "symbols":{
        "fontName": {
            "type": "parameter",
            "description": "The name of the new font registered when loaded.",
            "replaces":"$fontName",
            "datatype":"text",
            "isRequired": true
        },
        "graphicFile": {
            "type": "parameter",
            "description": "The file name of the graphic file containing the font glyphs.",
            "replaces":"$graphicFile",
            "datatype":"text",
            "isRequired": true
        },
        "glyphWidth": {
            "type": "parameter",
            "description": "The pixel width of each glyph in the graphic file.",
            "replaces":"$glyphWidth",
            "datatype": "int",
            "isRequired": true
        },
        "glyphHeight": {
            "type": "parameter",
            "description": "The pixel height of each glyph in the graphic file.",
            "replaces":"$glyphHeight",
            "datatype": "int",
            "isRequired": true
        },
        "columns": {
            "type": "parameter",
            "description": "The count of glyphs along the X-axis of the graphic file.",
            "replaces":"$cols",
            "defaultValue": "16",
            "datatype": "int",
            "isRequired": false
        },
        "solidGlyphIndex": {
            "type": "parameter",
            "description": "The glyph index of the glyph that is a solid white box.",
            "replaces":"$solidGlyph",
            "defaultValue": "219",
            "datatype": "int",
            "isRequired": false
        }
    }
}